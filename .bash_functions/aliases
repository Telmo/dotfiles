# Colorize output, add file type indicator, and put sizes in human readable format
alias ls='ls -GFh --color'
# Same as above, but in long listing format
alias ll='ls -GFhl --color'
# add file type indicator, and put sizes in human readable format
alias lsa='ls -GFh --color'
# Same as above, but in long listing format
alias lla='ls -GFhl --color'
# Make RI output pretty
alias ri='ri -Tf ansi'
alias ..='cd ..'
alias gst="gst_tmp=\$(git status | grep Untracked -A 0 -B 999 | grep -v Untracked); if [[ -n \"\$gst_tmp\" ]] ; then echo \"\$gst_tmp\" ; else git status ; fi"
alias glog='echo -e "`git log --pretty=format:"[\e[34m%ar\e[37m](\e[31m%an\e[37m)%n%s%n"`"'
alias gdiff='git diff --color'
alias grep='grep --color'
alias fspec='spec -f specdoc -c'
alias gpush='git push origin master'
alias trl='transmission-remote localhost:8081 -n telmo:3spidico -l'
