# usage: check_dependencies ruby gem
check_dependencies () {
	check_dependencies__depencency_missing=false
	for dependency in $*; do
		echo -n "checking dependency: $dependency"
		if [[ -n "$(which $dependency)" ]]; then
			echo "  $(which $dependency)  OK"
		else
			check_dependencies__depencency_missing=true
			echo "  MISSING"
		fi
	done
	if [[ $check_dependencies__depencency_missing == true ]]; then
		echo "Some dependencies not found, exiting ..."
		return 1
	fi
}

# vim:set ft=sh:
